<local:PageBase x:Class="ProjectLifeSaver.Pages.Profile"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:local="using:ProjectLifeSaver.Pages"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
                mc:Ignorable="d"
                SizeChanged="OnSizeChanged"
                >
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border x:Name="Bo_ProfilePictureBackground"
                Background="{ThemeResource SystemControlBackgroundAccentBrush}"
                Grid.Row="0"
                />

        <Border Background="#19FFFFFF"
                Grid.Row="0"
                />

        <Border x:Name="Bo_ProfilePicture"
                BorderThickness="3"
                BorderBrush="DarkRed"
                Height="{x:Bind Bo_ProfilePictureBackground.ActualHeight}"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,25,0,0"
                Grid.RowSpan="2"
                >
            <Image Source="ms-appx:///Assets/profile.jpg"
                   Stretch="Uniform"
                   />
        </Border>

        <ScrollViewer Padding="{StaticResource ContentMargin}"
                      VerticalScrollBarVisibility="Auto"
                      Grid.Row="2"
                      >
            <StackPanel>
                <TextBlock Text="{x:Bind ProfileData.Name, Converter={StaticResource StringToUpperCaseConverter}, Mode=OneWay}"
                           FontWeight="SemiBold"
                           FontSize="24"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           />

                <controls:HeaderedTextBlock Header="Age"
                                            Text="{x:Bind ProfileData.Age, Mode=OneWay}"
                                            />

                <controls:HeaderedTextBlock Header="Birth date"
                                            Text="{x:Bind ProfileData.BirthDate, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:d}', Mode=OneWay}"
                                            />

                <controls:HeaderedTextBlock Header="Blood type"
                                            Text="{x:Bind ProfileData.BloodType, Converter={StaticResource BloodTypeToStringConverter}, Mode=OneWay}"
                                            />

                <controls:HeaderedTextBlock Header="Additional info"
                                            Text="{x:Bind ProfileData.AdditionalInfo, Mode=OneWay}"
                                            />

                <ListView Header="Diseases">

                </ListView>
            </StackPanel>
        </ScrollViewer>

        <Viewbox Grid.RowSpan="2"
                 Margin="20"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center">
        </Viewbox>

        <Button Content="&#xE70F;"
                FontFamily="Segoe MDL2 Assets"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="48"
                Height="48"
                RequestedTheme="Dark"
                Style="{StaticResource TransparentButton}"
                Grid.Row="0"
                />
    </Grid>
</local:PageBase>
